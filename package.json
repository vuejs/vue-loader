{
  "name": "vue-loader",
  "version": "15.0.0-beta.7",
  "description": "Vue single-file component loader for Webpack",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "test": "jest --env node",
    "lint": "eslint lib test --fix",
    "build": "webpack --config example/webpack.config.js --hide-modules",
    "dev": "webpack-dev-server --config example/webpack.config.js --inline --hot",
    "prepublishOnly": "conventional-changelog -p angular -r 2 -i CHANGELOG.md -s"
  },
  "author": "Evan You",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vuejs/vue-loader/issues"
  },
  "homepage": "https://github.com/vuejs/vue-loader",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "lib/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "test/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "peerDependencies": {
    "css-loader": "*",
    "vue-template-compiler": "^2.0.0"
  },
  "dependencies": {
    "@vue/component-compiler-utils": "^1.0.0",
    "hash-sum": "^1.0.2",
    "loader-utils": "^1.1.0",
    "vue-hot-reload-api": "^2.3.0",
    "vue-style-loader": "^4.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "conventional-changelog": "^1.1.19",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.0",
    "eslint-plugin-vue-libs": "^2.1.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.1.0",
    "javascript-stringify": "^1.6.0",
    "jest": "^22.4.2",
    "jsdom": "^11.6.2",
    "lint-staged": "^7.0.0",
    "markdown-loader": "^2.0.2",
    "mini-css-extract-plugin": "^0.2.0",
    "node-sass": "^4.7.2",
    "normalize-newline": "^3.0.0",
    "postcss-loader": "^2.1.2",
    "pug": "^2.0.1",
    "pug-plain-loader": "^1.0.0",
    "raw-loader": "^0.5.1",
    "sass-loader": "^6.0.7",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "sugarss": "^1.0.1",
    "url-loader": "^1.0.1",
    "vue": "^2.5.16",
    "vue-server-renderer": "^2.5.16",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.1.0",
    "webpack-cli": "^2.0.10",
    "webpack-dev-server": "^3.1.1",
    "webpack-merge": "^4.1.2",
    "yorkie": "^1.0.3"
  }
}
